---
layout: base.njk
title: Ryan Gildea | Audio Engineer & Producer
---

{% if sections.showHero %}
<header class="hero">
  <div class="hero-content">
    <h1 id="hero-name" class="hero-title">Ryan Gildea</h1>
    <h2>Audio Engineer, Mix Producer & Developer</h2>
    <p>Crafting immersive soundscapes since 2003</p>
    <a href="#contact" class="cta-button">Work With Me</a>
    <div class="spotify-direct-embed">
      <iframe style="border-radius:12px" src="https://open.spotify.com/embed/playlist/3kybqFlT51pOHXhIsLoSOz?utm_source=generator" width="100%" height="100" frameBorder="0" allowfullscreen="" allow="autoplay; clipboard-write; encrypted-media; fullscreen; picture-in-picture" loading="lazy"></iframe>
    </div>
  </div>
  <div class="scroll-indicator">
    <div class="scroll-text">Scroll for more</div>
    <div class="scroll-arrow"><i class="fas fa-chevron-down"></i></div>
  </div>
</header>
{% endif %}

<main>
  {% if sections.showAbout %}
  <section id="about" class="about-section">
    <div class="container">
      <h2 class="section-title">About Me</h2>
      <div class="about-content">
        <div class="about-text">
          {{ about.bio | markdown | safe }}
        </div>
        <div class="skills">
          <h3>Skills</h3>
          <ul class="skill-list">
            {% for skill in about.skills %}
              <li>{{ skill }}</li>
            {% endfor %}
          </ul>
        </div>
      </div>
    </div>
  </section>
  {% endif %}

  {% if sections.showServices %}
  {% include "services-list.njk" %}
  {% endif %}
  
  {% if sections.showPortfolio %}
  {% include "portfolio-list.njk" %}
  {% endif %}

  {% if sections.showContact %}
  <section id="contact" class="contact-section">
    <div class="container">
      <h2 class="section-title">Get In Touch</h2>
      <div class="contact-content">
        <div class="contact-info">
          <p><i class="fas fa-envelope"></i> {{ contact.email }}</p>
          <p><i class="fas fa-phone"></i> {{ contact.phone }}</p>
          <p><i class="fas fa-map-marker-alt"></i> {{ contact.location }}</p>
          <div class="social-links">
            {% for social in contact.socialLinks %}
              <a
                href="{{ social.url }}"
                target="_blank"
                class="social-link"
                ><i class="fab {{ social.icon }}"></i
              ></a>
            {% endfor %}
          </div>
        </div>
        <form class="contact-form" name="contact" method="POST" data-netlify="true">
          <input type="hidden" name="form-name" value="contact">
          <div class="form-group">
            <label for="name">Name</label>
            <input type="text" id="name" name="name" required />
          </div>
          <div class="form-group">
            <label for="email">Email</label>
            <input type="email" id="email" name="email" required />
          </div>
          <div class="form-group">
            <label for="subject">Subject</label>
            <input type="text" id="subject" name="subject" />
          </div>
          <div class="form-group">
            <label for="message">Message</label>
            <textarea
              id="message"
              name="message"
              rows="5"
              required
            ></textarea>
          </div>
          <button type="submit" class="submit-button">Send Message</button>
        </form>
      </div>
    </div>
  </section>
  {% endif %}
</main>